@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bloglarım</h4>
         
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> Blog Başlığı</th>
                        <th> Oluşturma Tarihi </th>
                        <th> Kategori </th>
                        <th> Durum </th>
                        <th> Sil </th>
                        <th> Düzenle </th>
                        <th> Bloga Git </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.BlogTitle</td>
                            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMMM-yyyy"))</td>
                            <td>@item.Category.CategoryName</td>
                            <td>@item.BlogStatus</td>
                            <td><a href="/Blog/BlogDelete/@item.BlogID" onclick="return confirm('Bloğu silmek üzeresiniz.');" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>
                            <td><a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-success">Bloğa git</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <a href="/Blog/BlogAdd" class="btn btn-gradient-primary">Yeni Blog Oluştur</a>
        </div>
    </div>
</div>







