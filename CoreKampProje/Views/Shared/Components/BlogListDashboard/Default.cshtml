@using EntityLayer.Concrete
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                            @foreach (var item in Model)
                            {
                            <tr>
                              
                                <td>
                                    <img src="~/blogtema/images/@item.BlogImage" class="mr-2" alt="image">
                                </td>
                                <td>
                                    @item.BlogTitle
                                </td>

                                <td>
                                    @if (item.CategoryID == 1)
                                    {
                                        <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                                    }
                                    @if (item.CategoryID == 2)
                                    {
                                        <label class="badge badge-gradient-info">@item.Category.CategoryName</label>
                                    }
                                    @if (item.CategoryID == 3)
                                    {
                                        <label class="badge badge-gradient-light">@item.Category.CategoryName</label>
                                    }
                                    @if (item.CategoryID == 4)
                                    {
                                        <label class="badge badge-gradient-primary">@item.Category.CategoryName</label>
                                    }
                                    @if (item.CategoryID == 5)
                                    {
                                        <label class="badge badge-gradient-warning">@item.Category.CategoryName</label>
                                    }
                                    @if (item.CategoryID == 6)
                                    {
                                        <label class="badge badge-gradient-info">@item.Category.CategoryName</label>
                                    }
                                    @if (item.CategoryID == 7)
                                    {
                                        <label class="badge badge-gradient-secondary">@item.Category.CategoryName</label>
                                    }

                                </td>
                                <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMMM-yyyy")) </td>
                                <td>
                                    <a href="/Blog/BlogReadAll/@item.BlogID" class="btn-sm btn-primary">Bloğu Gör</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>