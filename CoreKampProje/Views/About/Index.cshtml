@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Hakkımızda</h3>
            <div class="row inner-sec">
                <!--left-->
                @foreach (var item in Model)
                {
                    <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                        <div class="blog-grid-top">

                            <div class="blog_info_left_grid">
                                <a href="single.html">
                                    <img src="~/blogtema/images/@item.AboutImage1" class="img-fluid" alt="">
                                </a>
                            </div>
                            <h3>
                             Biz Kimiz & Misyonumuz & Vizyonumuz
                            </h3>
                            <p>
                               @item.AboutDetails1
                               @item.AboutDetails2
                            </p>
                            <a href="/blogtema/Index/" class="btn btn-primary read-m">Blog Listesi</a>
                        </div>

                    </div>
                }

                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">

                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/blogtema/images/banner1.jpg" class="img-fluid" alt="">
                        </div>
                        @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
                        @await Html.PartialAsync("~/Views/About/SocialMediaAbout.cshtml")
                        @await Component.InvokeAsync("WriterLastBlog")


                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>
    <!--//main-->
    <!--footer-->

